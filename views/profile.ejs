<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <div class="col-sm-4">
          <h4>Profile informations:</h4>
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>First Name:</strong>: <%= user.firstname %><br>
                        <strong>Last Name:</strong>: <%= user.lastname %><br>
                        <strong>email</strong>: <%= user.email %><br>

                    </p>

            </div>
                <a href="/user/listfriends" class="btn-md">list friends</a>
        </div>

        <div class="col-sm-4">
          <h4>Friends suggestions:</h4>
              <ul class="list-group">
                <% suggestions.forEach(function(suggestion) {%>
                <li class="list-group-item"><%= suggestion.firstname %> <%= suggestion.lastname %> <a href="/user/addfriend?id=<%= suggestion.id %>" style="float:right;" class="btn-xs btn-success">Add</a></li>
                <% }); %>
              </ul>
        </div>

      

</div>
</body>
</html>
